{
  "name": "scrapouille-tui",
  "version": "3.0.5",
  "description": "Scrapouille Terminal UI built with TUIjoli",
  "type": "module",
  "scripts": {
    "dev": "bun run src/main.ts",
    "build": "bun build src/main.ts --compile --outfile ../dist/scrapouille-tui",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "link-tuijoli": "../../../dev/TUIjoli/scripts/link-tuijoli-dev.sh $PWD --solid"
  },
  "dependencies": {
    "@tuijoli/core": "^0.1.39",
    "@tuijoli/solid": "^0.1.39",
    "solid-js": "^1.9.9"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "latest",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.2.0"
  }
}
